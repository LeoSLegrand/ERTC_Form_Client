<Window x:Class="ERTC_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERTC_Client"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Grid>

        <StackPanel>
            <TextBlock Text="Connexion Client Admin" Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="212"/>
            <TextBlock Text="Email Admin :" Margin="10" Width="275"/>
            <TextBox x:Name="EmailTextBox" Width="300"/>
            <TextBlock Text="Mot de Passe Admin :" Margin="10" Width="275"/>
            <PasswordBox x:Name="PasswordBox" Margin="10" Width="300"/>
            <TextBlock x:Name="StatusTextBlock" Foreground="Blue" Margin="10"/>
            <Button Content="Connexion" Click="LoginButton_Click" Width="184"/>
        </StackPanel>
    </Grid>
</Window>