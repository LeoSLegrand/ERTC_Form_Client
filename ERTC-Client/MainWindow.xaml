<Window x:Class="ERTC_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERTC_Client"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="EmailTextBox" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Margin="10"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
            <TextBlock x:Name="StatusTextBlock" Foreground="Red" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>